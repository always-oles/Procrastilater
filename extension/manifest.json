{
  "name": "ProcrastiLater",
  "version": "1.0",
  "manifest_version": 2,
  "description": "__MSG_description__",
  "homepage_url": "https://github.com/always-oles/ScrollIt",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
     "default_icon": {
       "19": "icons/icon19.png",
       "38": "icons/icon38.png"
     }
  },
  "web_accessible_resources": [
      "images/alarm.svg"
  ],
  "options_page": "index.html",
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://google.com/; object-src 'self'"
}
